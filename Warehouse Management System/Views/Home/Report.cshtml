@model Warehouse_Management_System.Models.WarehouseStockReportViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Report</h1>
</div>

<h4>Clients with highest amount of items stored</h4>
<table class="table table-hover table-bordered">
    <tbody>
        @foreach (var item in Model.Clients)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stocks.Count)
                </td>
            </tr>
        }
    </tbody>
</table>

<h4>Heaviest sectors with their weights</h4>

<table class="table table-hover table-bordered">
    <tbody>
        @for (int i = 0; i < Model.Sectors.Count; i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.Sectors[i])
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.SectorWeights[i])
                </td>
            </tr>
        }
    </tbody>
</table>

