@model Warehouse_Management_System.Entities.Stock

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WarehouseSector" class="control-label"></label>
                <input asp-for="WarehouseSector" class="form-control" />
                <span asp-validation-for="WarehouseSector" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlacingDate" class="control-label"></label>
                <input asp-for="PlacingDate" class="form-control" />
                <span asp-validation-for="PlacingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a onclick="callChangefunc(@Model.ClientId)">Back to Client</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    function callChangefunc(value) {
        window.location.href = "/Clients/Details/" + value;
    }
</script>